<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9F1239"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Bus By:"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:elevation="4dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Faculties"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="8"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/checkBoxFILF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="FILF"
                android:textColor="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBoxTSPMI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TSPMI"
                android:textColor="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBoxFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="FF"
                android:textColor="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBoxGMC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="GMC"
                android:textColor="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBoxKNF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="KNF"
                android:textColor="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBoxTF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TF"
                android:textColor="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBoxKOMF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="KOMF"
                android:textColor="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBoxVM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="VM"
                android:textColor="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBoxIF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="IF"
                android:textColor="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBoxEVAF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="EVAF"
                android:textColor="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBoxMF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="MF"
                android:textColor="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBoxŠA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ŠA"
                android:textColor="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBoxFLF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="FLF"
                android:textColor="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBoxCHGF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="CHGF"
                android:textColor="#FFFFFF"/>

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Mode"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/radioButtonRemote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remote"
                android:textColor="#FFFFFF"/>

            <RadioButton
                android:id="@+id/radioButtonOnSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On Site"
                android:textColor="#FFFFFF"/>

            <RadioButton
                android:id="@+id/radioButtonHybrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hybrid"
                android:textColor="#FFFFFF"/>
        </RadioGroup>

        <Button
            android:id="@+id/doneButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:padding="10dp"
            android:text="Done"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_background"
            android:layout_marginTop="20dp"
            android:backgroundTint="#CF3759"/>
    </LinearLayout>
</ScrollView>